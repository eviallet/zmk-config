#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define LAYER_MEDIA  0
#define LAYER_MOVE   1
#define LAYER_OS     2
#define LAYER_SHTCUT 3
#define LAYER_DEFAULT LAYER_MEDIA

// Gueg's mk layout :
// 1
// 2  5
// 3  6  EC11
// 4  7  

/ {
    keymap {
        compatible = "zmk,keymap";

        layer_media {

            // [NEXT LAYER]
            // [AUD TRACK]  [SUB TRACK]
            // [PAUSE]      [FULLSCREEN] 
            // [LEFT]       [RIGHT]
            
            bindings = <
                &to LAYER_MOVE
                &kp B           &kp V
                &kp SPACE       &kp F
                &kp LEFT        &kp RIGHT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };

        layer_move {

            // [NEXT LAYER]
            // [UP]       [DOWN]
            // [PAGE_UP]  [PAGE_DOWN] 
            // [LEFT]     [RIGHT]

            bindings = <
                &to LAYER_OS
                &kp UP          &kp DOWN
                &kp PAGE_UP     &kp PAGE_DOWN
                &kp LEFT        &kp RIGHT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
            
        };

        layer_os {

            // [NEXT LAYER]
            // [ALT+F4]     [ENTER]
            // [SUPPR]      [] 
            // [TO_TV]      [TO_PC]

            bindings = <
                &to LAYER_MEDIA
                &kp LA(F4)      &kp ENTER
                &kp DEL         &kp PAGE_DOWN
                &kp LEFT        &kp RIGHT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
        };
    };
};




